# MindMirror AI Backend Environment Variables - Gradio Version
# Copy this file to .env and fill in your actual values

# Google OAuth Configuration (REQUIRED)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Redirect URI - Update based on deployment
# Local development:
REDIRECT_URI=http://localhost:7860/callback
# Hugging Face Spaces (update with your space name):
# REDIRECT_URI=https://your-username-mindmirror-ai.hf.space/callback

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
# For production:
# FRONTEND_URL=https://your-app.vercel.app

# Hugging Face API Token (OPTIONAL - for higher rate limits)
# App works without this using public endpoints
# Get token from: https://huggingface.co/settings/tokens
HUGGINGFACE_HUB_TOKEN=

# OpenRouter API Key (REQUIRED for AI reflections)
# Get your FREE API key from: https://openrouter.ai/keys
# Free tier includes: Google Gemini Flash, Llama 3.1, Mistral 7B
# DO NOT commit your actual key - keep it in .env only!
OPENROUTER_API_KEY=your-openrouter-api-key-here

# OpenRouter Model (OPTIONAL - defaults to free Google Gemini Flash 1.5)
# Free models: google/gemini-flash-1.5, meta-llama/llama-3.1-8b-instruct:free
# Paid models: anthropic/claude-3-haiku, openai/gpt-3.5-turbo
# See all models: https://openrouter.ai/models
OPENROUTER_MODEL=google/gemini-flash-1.5

# Server Configuration
PORT=7860

# Session Configuration
SESSION_TTL=3600  # Session timeout in seconds (1 hour)
